<?xml version="1.0"?>
<project name="Perl TAP::Harness Extension" default="zipup">
	
	<target name="zipup" description="Zips up the whole application for deployment">
		<echo message="Zipping up entire application" />
		<zip zipfile="PerlTAPExtension.zip" verbose="true" comment="Perl TAP::Harness Extension for SpiraTest">
			<fileset>
				<include name="*.pl" />
				<include name="*.pm" />
				<include name="*.txt" />
			</fileset>
		</zip>
	</target>
	
</project>
